<div class="text-center">
  <div class="p-4 mb-3 bg-light">
    <h3><%= @user.name %></h3>
    <%= image_tag user_avatar(@user), class: "mt-3 m-3 rounded", style: "width: 10rem;"%>
    <% if @user == current_user %>
      <p><%= link_to 'Редактировать профиль', edit_user_path(@user), class: 'btn btn-default' %></p>
    <% end %>
  </div>  
  <div>
    <% if @user.events.any? %>
      <h4>Организовал:</h4>
      <div class="d-flex flex-wrap justify-content-between mt-3">
        <%= render partial: 'events/event', collection: @user.events %>
      </div>
    <% else %>
      <p>Пользователь пока не организовал ни одного события</p>
    <% end %>
  </div>
</div>
