<%= form_for [@event, subscription] do |f| %>
  <%= render partial: 'partials/form_errors', locals: {model: subscription} %>

  <% unless user_signed_in? %>
      <div class="form-group row">
        <%= f.label :user_name, class: 'col-sm-3 col-form-label' %>
        <%= f.text_field :user_name, class: 'form-control col-sm-8' %>
      </div>

      <div class="form-group row">
        <%= f.label :user_email, class: 'col-sm-3 col-form-label' %>
        <%= f.text_field :user_email, class: 'form-control col-sm-8' %>
      </div>
  <% end %>

  <div class="actions">
    <%= f.submit t('subscriptions.subscription.subscribe'), class: 'btn btn-primary' %>
  </div>
<% end %>
