<div class="mt-3">
  <%= form_for [@event, subscription] do |f| %>
    <div>
    <%= render partial: 'partials/form_errors', locals: {model: subscription} %>
    </div>

    <% unless user_signed_in? %>
      <div class="flex-column">  
        <div class="form-group">
          <%= f.text_field :user_name, placeholder: t('subscriptions.subscription.your_name'), class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.text_field :user_email, placeholder: t('subscriptions.subscription.your_email'), class: 'form-control' %>
        </div>  
      </div>
    <% end %>

    <div class="mb-3">
      <%= recaptcha_tags size: 'compact' unless current_user.present? %>
    </div>

    <div class="actions">
      <%= f.submit t('subscriptions.subscription.subscribe'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
