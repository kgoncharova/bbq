<div class="container">
  <h3><%= t('event.pincode_access_only') %></h3>
  <%= link_to t('event.back'), events_path %>
  <div class="card mt-3">
    <div class="card-body bg-light">
      <%= form_tag('', method: 'post') do |f| %>
        <div class="form-group">
          <%= label :pincode, t('event.pincode') %>
          <%= text_field_tag :pincode, params[:pincode], class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        </div>

        <div class="actions">
          <%= submit_tag t('event.pincode_accept'), class: 'btn btn-primary mb-2' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
