<div class="card m-1" style="width: 14rem;">
  <%= image_tag(event_photo(event), class: "card-img-top", style: "max-height: 180px;", alt: "[event]") %>  
  <div class="card-body">
    <h5 class="card-title"><%= link_to event.title, event_path(event) %></h5>
    <small class="card-text"><%= event.address %></small>
  </div>
  <div class="card-footer">
    <small class="card-text"><%= l event.datetime, format: :short %></small>    
  </div>  
</div>
