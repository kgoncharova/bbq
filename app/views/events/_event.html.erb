<div class="card mb-2" style="width: 15rem;">
  <%= image_tag asset_path('event.jpg'), class: "card-img-top", alt: "[event]" %>  
  <div class="card-body">
    <h5 class="card-title"><%= link_to event.title, event_path(event) %></h5>
    <small class="card-text"><%= event.address %></small>
  </div>
  <div class="card-footer">
    <small class="card-text"><%= event.datetime %></small>    
  </div>
</div>
