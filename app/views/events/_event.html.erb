<div class="card m-2" style="width: 16rem;">
  <%= content_tag 'div', '', class: 'card-img-top event-photo', alt: "[event]",
      style: "background-image: url(#{event_photo(event)}); height: 180px;" %>
  <div class="card-body">
    <div class="d-flex">
      <% if event.pincode.present? %>
        <%= content_tag(:span, fa_icon('lock'), class: "align-self-start badge badge-warning mr-2 mt-1") %>
      <% end %>
      <h5 class="card-title"><%= link_to truncate(event.title, length: 35, separator: ' '), event_path(event) %></h5>
    </div>
    <small class="card-text"><%= event.address %></small>
  </div>
  <div class="card-footer d-inline-flex justify-content-between">
    <small class="card-text"><%= l event.datetime, format: :short %></small>
    <%= event_expired?(event) %>
  </div>
</div>
