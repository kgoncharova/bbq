<div class="mt-2 mb-2 d-inline-flex">
  <div class="mr-3">
    <%= link_to image_tag(photo.photo.thumb.url, class: "rounded", style: "height: 80px"), photo.photo.url %>
    <p><small>Автор: <%= link_to photo.user.name, user_path(photo.user) %></small></p>
    <div class="ml-1">
      <% if current_user_can_edit?(photo) && photo.event.present? %>
        <%= link_to(
                fa_icon('trash'),
                event_photo_path(photo.event, photo),
                method: :delete, data: {confirm: t('photos.destroy_confirm')}
            ) %>
      <% end %>
    </div>
  </div>
</div>
