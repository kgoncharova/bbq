<div class="container">
  <%= form_for [@event, @comment] do |f| %>
    <%= render partial: 'partials/form_errors', locals: {model: @comment} %>

    <% unless user_signed_in? %>
      <div class="form-group">
        <%= f.text_field :user_name, placeholder: t('comments.comment.user_name'), class: 'form-control' %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.text_area :body, placeholder: t('comments.comment.body'), class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= recaptcha_tags unless current_user.present? %>
    </div>

    <div class="actions">
      <%= f.submit t('comments.comment.send'), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
